<%= render 'shared/errors', object: @place %>

<%= form_for @place do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <p><strong>Addresses:</strong></p>
        <div id='addresses'>
            <%= f.fields_for :addresses do |address| %>
                <%= render 'address_fields', f: address %>
            <% end %>
            <div class='links'>
                <%= link_to_add_association 'Add address', f, :addresses %>
            </div>
        </div>
    </div>
    <%= f.submit %>
<% end %>